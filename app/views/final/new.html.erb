
<%= form_for @park do |form| %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :image %>
    <%= form.text_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :state %>
    <%= form.text_field :state, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :country %>
    <%= form.text_field :country, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :rating %>
    <%= form.text_field :rating, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :summary %>
    <%= form.text_area :summary, class: "form-control", rows: 5 %>
  </div>

  <div class="form-group">
    <%= form.label :airport_id %>
    <%= form.collection_select :airport_id, Airport.order(:name), :id, :name, { include_blank: true }, { class: "form-control" } %>
  </div>

  </div>
  <%= form.button 'Create Park', class: "btn btn-success" %>

<% end %>