<h1 class="title">
   <%= @park.name %>
  <span class="rating"><%= @park.rating %></span>
</h1>

<div class="row">
  <div class="col-md-3 text-center">
    <p><%= image_tag @park.image %>></p>
    <p><strong>State:</strong> <%= @park.state %></p>
    <p><strong>Country:</strong> <%= @park.country %></p>
  </div>
  <div class="col-md-4 summary">
    <h2>Summary</h2>
    <p> <%= @park.summary %></p>
  </div>
  <div class="col-md-3 actors">
    <h2>Park Features</h2>
    <ul class="list-unstyled">
      <%= @parkfeatures.each do |parkfeature| %>
      <li><%= link_to parkfeature.feature.activity, feature_path(parkfeature.feature) %></li>
      <% end%>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-md-7 col-md-offset-3">
    <h3>Reviews</h3>
    <% @park.reviews.each do |review| %>
      <h4><%= review.user.name %> <%= stars_for(review) %></h4>
      <p><%= review.body %></p>
    <% end %>

    <%= link_to "Write a Review", new_park_review_path(@park), class: 'btn btn-success' %>
  </div>
</div>

<div class="row">
  <div class="col-md-9 col-md-offset-3 reviews">
    <h2 class="page-header">Transportation</h2>
    <table class="table table-striped table-bordered">
      <tr>
        <td><strong>Nearest Airport</strong></td>
        <td><%= @park.airport.name %></td>
      </tr>
    </table>
  </div>
</div>

